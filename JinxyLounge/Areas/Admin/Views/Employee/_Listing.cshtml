@model JinxyLounge.Areas.Models.EmployeeListViewModel


@if (Model != null && Model.Products != null && Model.Products.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Date_Of_Birth</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Start_Date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Employee != null)
            {
                foreach (var employee in Model.Employee)
                {
            <tr>
                <td>
                    @employee.Name
                </td>
                <td>
                    @employee.Age
                </td>
                <td>
                    @employee.Date_Of_Birth
                </td>
                <td>
                    @employee.Phone
                </td>
                <td>
                    @employee.Address
                </td>
                <td>
                    @employee.Email
                </td>
                <td>
                    @employee.Start_Date
                </td>
                <td>
                    <button data-href="@Url.Action("Action", "Product", new { Id = employee.Id })" type="button" class="data-btn btn btn-success" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fa-solid fa-pen mr-1"></i>Edit</button>
                    <button data-href="@Url.Action("Delete", "Product", new { Id = employee.Id })" type="button" class="data-btn btn btn-danger" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fa-solid fa-trash-can mr-1"></i>Delete</button>
                </td>
            </tr>
                }
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! No records exist.
    </div>
}